= form_for [@category, @question, @answer], :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :text, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_area :text, :class => 'text_field form-control', rows: 10
  .form-group
    = f.label :points, :class => 'control-label col-md-2'
    .col-md-10
      = f.number_field :points, :class => 'text_field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), category_question_answers_path(@category, @question), :class => 'btn btn-default'