- model_class = Question

%h3
  = @question.text
%hr
%h4
  Варіанти відповіді:

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:text)
      %th{ style: 'width: 99px'}
        =t '.actions', :default => t("helpers.actions")
  %tbody
    - @answers.each do |answer|
      %tr
        %td
          = answer.text
        %td
          = link_to edit_category_question_answer_path(@category, @question, answer), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to category_question_answer_path(@category, @question, answer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }"  do
            = glyph 'remove'

= link_to 'Додати варіант відповіді', new_category_question_answer_path(@category, @question), :class => 'btn btn-primary'
