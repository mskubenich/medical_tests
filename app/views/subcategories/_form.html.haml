= form_for [@category, @subcategory], :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :category_id, :class => 'control-label col-md-2'
    .col-md-10
      %h3
        = @category.title
      = f.hidden_field :category_id, :class => 'text_field form-control'
  .form-group
    = f.label :title, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :title, :class => 'text_field form-control'
  .form-group
    = f.label :description, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_area :description, :class => 'text_field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), category_subcategories_path(@category), :class => 'btn btn-default'