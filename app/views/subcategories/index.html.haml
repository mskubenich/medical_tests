- model_class = Subcategory
.page-header
  %h1
    =t '.title', :default => model_class.model_name.human.pluralize.titleize
    for
    = @category.title
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @subcategories.each do |subcategory|
      %tr
        %td= subcategory.title
        %td= subcategory.description
        %td=l subcategory.created_at, format: :long
        %td
          = link_to category_subcategory_path(@category, subcategory), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
          = link_to edit_category_subcategory_path(@category, subcategory), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to category_subcategory_path(@category, subcategory), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }"  do
            = glyph 'remove'

= link_to t('.new', :default => t("helpers.links.new")), new_category_subcategory_path(@category), :class => 'btn btn-primary'
