- model_class = Question

= link_to t('.new', :default => t("helpers.links.new")), new_category_subcategory_profile_question_path(@category, @subcategory, @profile), :class => 'btn btn-primary'

.row
  .col-md-12.text-right
    = will_paginate @questions, renderer: BootstrapPagination::Rails

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:text)
      %th{ style: 'width: 170px'}
        = model_class.human_attribute_name(:created_at)
      %th{ style: 'width: 99px'}
        =t '.actions', :default => t("helpers.actions")
  %tbody
    - @questions.each do |question|
      %tr
        %td
          = question.text
          - question.answers.shuffle.each do |answer|
            %br
            %span.label{ class: "#{ answer.correct ? 'label-success' : 'label-primary'}"}
              = answer.text
        %td=l question.created_at, format: :long
        %td
          = link_to category_subcategory_profile_question_path(@category, @subcategory, @profile, question), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
          = link_to edit_category_subcategory_profile_question_path(@category, @subcategory, @profile, question), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to category_subcategory_profile_question_path(@category, @subcategory, @profile, question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }"  do
            = glyph 'remove'

.row
  .col-md-12.text-right
    = will_paginate @questions, renderer: BootstrapPagination::Rails